<!-- Portfolio Gallery Section -->
<section class="portfolio py-8">
  <h2 class="text-3xl text-gray-700 font-bold mb-6 text-center">Our Portfolio</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% Bouquet.all.sample(3).each do |bouquet| %>
      <div class="portfolio-item">
        <%= image_tag bouquet.photos.first, class: "w-full h-auto object-cover rounded-lg shadow-md mb-4", alt: bouquet.name %>
      </div>
    <% end %>
  </div>
</section>

<!-- Button to Open Modal -->
<div data-controller="modal" class="text-center mt-8">
  <button data-action="click->modal#open" class="bg-pink-100 text-pink-800 text-lg text-center font-semibold px-6 py-2 rounded-md hover:bg-pink-700 hover:text-white">
    Send Request
  </button>
  <div data-modal-target="modal" class="modal fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="modal-content bg-white rounded-lg shadow-lg p-6 w-4/6 max-w-3xl">
      <h3 class="text-2xl font-bold text-pink-600 mb-4">Send Your Request</h3>
      <%= form_with url: requests_path, method: :post, local: true, class: "space-y-4", id: "requestForm" do |f| %>
        <div>
          <%= f.label :email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 border rounded-lg focus:ring-pink-500 focus:border-pink-500", required: true %>
        </div>
        <div>
          <%= f.label :message, "Your Message", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :message, class: "w-full px-3 py-2 border rounded-lg focus:ring-pink-500 focus:border-pink-500", required: true %>
        </div>
        <div class="flex justify-end space-x-4">
          <button type="button" data-action="click->modal#close" class="bg-gray-200 px-4 py-2 rounded-md hover:bg-gray-300">
            Cancel
          </button>
          <%= f.submit "Send", class: "bg-pink-100 text-pink-800 text-lg font-semibold text-center px-4 py-2 rounded-md hover:bg-pink-700 hover:text-white", data: {disable_with: "Sending..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- About Us Section -->
<section class="about max-w-2xl mx-auto bg-white py-10 px-8 rounded-lg shadow-lg border-l-4 border-pink-500 my-12">
  <h2 class="text-4xl font-extrabold text-pink-600 mb-4 text-center">Our Story</h2>
  <p class="text-lg text-gray-700 text-center leading-relaxed">
    <strong>LOVE and PASSION. Flowers</strong> is a small business founded by Ukrainian immigrants.
    We create and deliver custom flower arrangements across Long Island, New York.
    Our mission is to bring beauty and joy to your special life moments through unique floral creations.
  </p>
</section>
