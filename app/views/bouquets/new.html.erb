<!-- Bouquet Form -->
<%= form_with model: @bouquet, local: true, class: "space-y-8", data: { controller: "preview" } do |f| %>
  <!-- New Bouquet Section -->
  <section class="portfolio py-8">
    <h2 class="text-3xl text-gray-700 font-bold mb-6 text-center">Create a New Bouquet</h2>

    <!-- Name Field -->
    <div class="mb-4">
      <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500" %>
    </div>

    <!-- Description Field -->
    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500" %>
    </div>

    <!-- File Upload Field -->
    <div class="mb-4">
      <%= f.label :photos, "Upload Photos", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.file_field :photos, required: true, multiple: true, accept: "image/*",
                       class: "w-full px-4 py-2 border border-gray-300 text-gray-700 rounded-lg shadow-sm focus:ring-pink-500 focus:border-pink-500",
                       data: { preview_target: "fileInput", action: "change->preview#preview" } %>
    </div>

    <!-- Preview of Uploaded Photos -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4" data-preview-target="preview" >
      <!-- Images will be dynamically inserted here -->
    </div>
  </section>

  <!-- Buttons -->
  <div class="flex justify-center space-x-4">
    <!-- Back Button -->
    <%= link_to "Back to Gallery", bouquets_path, class: "bg-gray-200 text-gray-700 text-lg font-semibold text-center px-4 py-2 rounded-md hover:bg-gray-300 shadow" %>
    <!-- Submit Button -->
    <%= f.submit "Create Bouquet",
                 class: "bg-pink-100 text-pink-800 text-lg font-semibold text-center px-4 py-2 rounded-md hover:bg-pink-700 hover:text-white shadow",
                 data: { confirm: "Are you sure you want to create this bouquet?" }%>
  </div>
<% end %>
